<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".intro.ResetPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBackReset"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/btnback"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.5"
            android:gravity="center|bottom"
            android:text="Reset Password"
            android:layout_marginRight="60dp"
            android:fontFamily="@font/inter_semi_bold"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginTop="65dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:letterSpacing="0.15"
        android:text="CREATE NEW PASSWORD"
        android:textColor="#4A37C1"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="44dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="140dp"
        android:layout_marginTop="65dp"
        android:layout_gravity="center"
        android:contentDescription="@string/app_name"
        android:src="@drawable/reset_password"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:text="Use at least 6 characters strong password"
        android:textColor="#8680AC"
        android:textAlignment="center"
        android:textSize="14dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="75dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:text="New Password"
        android:textColor="#000000"
        android:textSize="12dp"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="44dp"
        android:alpha="0.6"  />

    <EditText
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_000000_10_"
        android:fontFamily="@font/inter_semi_bold"
        android:hint="Enter your password"
        android:maxLines="1"
        android:singleLine="true"
        android:paddingLeft="18dp"
        android:textSize="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:text="Confirm Password"
        android:textColor="#000000"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="44dp"
        android:alpha="0.6"/>

    <EditText
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_000000_10_"
        android:fontFamily="@font/inter_semi_bold"
        android:hint="Enter your password"
        android:maxLines="1"
        android:singleLine="true"
        android:paddingLeft="18dp"
        android:textSize="12dp" />

    <Button
        android:id="@+id/btnResetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:width="305dp"
        android:fontFamily="@font/inter_semi_bold"
        android:textSize="15dp"
        android:backgroundTint="#7B66FF"
        android:background="@drawable/button_border_full"
        android:textColor="@android:color/white"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="44dp"/>

</LinearLayout>