<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".intro.ForgotPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBackForgot"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/btnback"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.5"
            android:gravity="center|bottom"
            android:text="Forgot Password"
            android:layout_marginRight="60dp"
            android:fontFamily="@font/inter_semi_bold"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginTop="65dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="415dp"
        android:layout_height="323dp"
        android:layout_marginTop="-20dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/forgot_password" />

    <TextView
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:letterSpacing="0.15"
        android:text="DON'T WORRY."
        android:textColor="#4A37C1"
        android:textSize="32dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="44dp"/>

    <TextView
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:text="Please enter your phone number. We will send a code to your number to reset your password."
        android:textColor="#8680AC"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="44dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:text="Phone number"
        android:textColor="#000000"
        android:textSize="12dp"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="44dp"
        android:alpha="0.6"  />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="8dp"
        android:letterSpacing="0.10"
        android:background="@drawable/border_000000_10_"
        android:fontFamily="@font/inter_semi_bold"
        android:hint="Enter your phone number"
        android:maxLines="1"
        android:singleLine="true"
        android:paddingLeft="18dp"
        android:textSize="12dp"
        android:inputType="number" />

    <Button
        android:id="@+id/btnGetOTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET OTP"
        android:width="305dp"
        android:fontFamily="@font/inter_semi_bold"
        android:textSize="15dp"
        android:backgroundTint="#7B66FF"
        android:background="@drawable/button_border_full"
        android:textColor="@android:color/white"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="44dp"/>

</LinearLayout>