<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intro.Login"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnBackLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btnback"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="start"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:letterSpacing="0.15"
            android:text="WELCOME!"
            android:textColor="#4A37C1"
            android:textSize="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_gravity="start"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="Sign in to continue"
            android:textColor="#8680AC"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_gravity="start"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="Email"
            android:textColor="#000000"
            android:textSize="12dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_gravity="start"
            android:alpha="0.6"  />

        <EditText
            android:id="@+id/etEmailLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="44dp"
            android:background="@drawable/border_000000_10_"
            android:fontFamily="@font/inter_semi_bold"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:singleLine="true"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="Password"
            android:textColor="#000000"
            android:textSize="12dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_gravity="start"
            android:alpha="0.6"  />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            app:passwordToggleEnabled="true"
            app:hintEnabled="false">

            <EditText
                android:id="@+id/etPasswordLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_000000_10_"
                android:fontFamily="@font/inter_semi_bold"
                android:hint="Enter your password"
                android:maxLines="1"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:singleLine="true"
                android:textSize="12dp"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginRight="44dp"
            android:layout_gravity="center"
            android:layout_marginLeft="44dp">

            <CheckBox
                android:id="@+id/remember_me_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Remember me"
                android:layout_weight="0.5"
                android:layout_gravity="start"
                android:fontFamily="@font/inter_regular"
                android:textSize="10dp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/btnForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center|end"
                android:text="Forgot Password?"
                android:fontFamily="@font/inter_regular"
                android:textSize="10dp"
                android:textColor="#4A37C1"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:width="305dp"
            android:fontFamily="@font/inter_semi_bold"
            android:textSize="15dp"
            android:backgroundTint="#7B66FF"
            android:background="@drawable/button_border_full"
            android:textColor="@android:color/white"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lane_or"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/btnLoginGoogle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_gravity="center"
            android:background="@drawable/signin_google"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_gravity="center"
            android:background="@drawable/signin_facebook"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_gravity="start"
            android:layout_marginTop="35dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account?"
                android:fontFamily="@font/inter_regular"
                android:textColor="#7B66FF"
                android:textSize="11dp"/>

            <TextView
                android:id="@+id/signup_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:fontFamily="@font/inter_medium"
                android:textColor="#4A37C1"
                android:textSize="11dp"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>