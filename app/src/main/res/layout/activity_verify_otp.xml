<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".intro.VerifyOTP">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBackVerify"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/btnback"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.5"
            android:gravity="center|bottom"
            android:text="Verify OTP"
            android:layout_marginRight="60dp"
            android:fontFamily="@font/inter_semi_bold"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginTop="65dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:letterSpacing="0.15"
        android:text="VERIFY YOUR PHONE NUMBER"
        android:textColor="#4A37C1"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginTop="53dp"
        android:layout_marginLeft="44dp"/>

    <TextView
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:text="We have just sent a 4 digit code to your entered number. Enter the code below."
        android:textColor="#8680AC"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="44dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp">

        <EditText
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/ellipse"
            android:textAlignment="center"
            android:fontFamily="@font/inter_semi_bold"
            android:textSize="30sp"
            android:inputType="number"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:layout_gravity="center"/>

        <EditText
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/ellipse"
            android:textAlignment="center"
            android:fontFamily="@font/inter_semi_bold"
            android:textSize="30sp"
            android:inputType="number"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:layout_gravity="center"/>

        <EditText
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/ellipse"
            android:textAlignment="center"
            android:fontFamily="@font/inter_semi_bold"
            android:textSize="30sp"
            android:inputType="number"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:layout_gravity="center"/>

        <EditText
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/ellipse"
            android:textAlignment="center"
            android:fontFamily="@font/inter_semi_bold"
            android:textSize="30sp"
            android:inputType="number"
            android:gravity="center"
            android:layout_gravity="center"/>
    </LinearLayout>

    <TextView
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:text="Didn't you receive any code?"
        android:textColor="#8680AC"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="44dp"/>

    <TextView
        android:id="@+id/btnResendNewCode"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:text="RESEND NEW CODE"
        android:textColor="#4A37C1"
        android:textSize="10dp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="44dp"/>

    <Button
        android:id="@+id/btnVerify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:width="305dp"
        android:fontFamily="@font/inter_semi_bold"
        android:textSize="15dp"
        android:backgroundTint="#7B66FF"
        android:background="@drawable/button_border_full"
        android:textColor="@android:color/white"
        android:layout_marginTop="243dp"
        android:layout_marginLeft="44dp"/>

</LinearLayout>