<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intro.Register"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnBackRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btnback"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="start"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:letterSpacing="0.15"
            android:text="HI!"
            android:textColor="#4A37C1"
            android:textSize="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_gravity="start"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="Create a new account"
            android:textColor="#8680AC"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_gravity="start"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="Phone"
            android:textColor="#000000"
            android:textSize="12dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_gravity="start"
            android:alpha="0.6" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/border_000000_10_"
            android:fontFamily="@font/inter_semi_bold"
            android:hint="Enter your phone"
            android:maxLines="1"
            android:singleLine="true"
            android:paddingLeft="18dp"
            android:textSize="12dp"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="Name Farm"
            android:textColor="#000000"
            android:textSize="12dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_gravity="start"
            android:alpha="0.6"  />

        <EditText
            android:id="@+id/etNameRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/border_000000_10_"
            android:fontFamily="@font/inter_semi_bold"
            android:hint="Enter your name"
            android:maxLines="1"
            android:singleLine="true"
            android:paddingLeft="18dp"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="Description Farm"
            android:textColor="#000000"
            android:textSize="12dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_gravity="start"
            android:alpha="0.6"  />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/border_000000_10_"
            android:fontFamily="@font/inter_semi_bold"
            android:hint="Enter your description"
            android:minLines="2"
            android:gravity="start|center"
            android:inputType="textMultiLine"
            android:paddingTop="5dp"
            android:paddingRight="18dp"
            android:paddingLeft="18dp"
            android:paddingBottom="5dp"
            android:textSize="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="Email"
            android:textColor="#000000"
            android:textSize="12dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_gravity="start"
            android:alpha="0.6"  />

        <EditText
            android:id="@+id/etEmailRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/border_000000_10_"
            android:fontFamily="@font/inter_semi_bold"
            android:hint="Enter your email"
            android:maxLines="1"
            android:singleLine="true"
            android:paddingRight="18dp"
            android:paddingLeft="18dp"
            android:textSize="12dp"
            android:inputType="textEmailAddress"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="Password"
            android:textColor="#000000"
            android:textSize="12dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_gravity="start"
            android:alpha="0.6"  />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            app:passwordToggleEnabled="true"
            app:hintEnabled="false">

            <EditText
                android:id="@+id/etPasswordRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter your password"
                android:background="@drawable/border_000000_10_"
                android:fontFamily="@font/inter_semi_bold"
                android:maxLines="1"
                android:singleLine="true"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:textSize="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTER"
            android:width="305dp"
            android:fontFamily="@font/inter_semi_bold"
            android:textSize="15dp"
            android:backgroundTint="#7B66FF"
            android:background="@drawable/button_border_full"
            android:textColor="@android:color/white"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lane_or"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_gravity="center"
            android:background="@drawable/signin_google"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_gravity="center"
            android:background="@drawable/signin_facebook"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_gravity="start">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account?"
                android:fontFamily="@font/inter_regular"
                android:textColor="#7B66FF"
                android:textSize="11dp"/>

            <TextView
                android:id="@+id/btnSigninRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign in"
                android:fontFamily="@font/inter_medium"
                android:textColor="#4A37C1"
                android:textSize="11dp"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>